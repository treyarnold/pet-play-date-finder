<% include ./partials/header %>

<div class="container">

    <h2>Survey Questions</h2>
    <hr>

    <h3><strong>About Your Pet</strong></h3>
    <form action="./API/pets" method="POST">
      <h4>Name (Required)</h4>
      <input type="text" name="name" class="form-control" required>

      <h4>Link to Photo Image (Required)</h4>
      <input type="text" name="photo" class="form-control" required>

      <hr>

      <% for (let i = 0; i < questions.length; i++) { %>
        <h3><strong>Question <%= i + 1 %></strong></h3>
        <h4><%= questions[i] %></h4>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="question<%= i + 1 %>" id="inlineRadio1" value="1">
          <label class="form-check-label" for="inlineRadio1">1</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="question<%= i + 1 %>" id="inlineRadio2" value="2">
          <label class="form-check-label" for="inlineRadio2">2</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="question<%= i + 1 %>" id="inlineRadio3" value="3">
          <label class="form-check-label" for="inlineRadio3">3</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="question<%= i + 1 %>" id="inlineRadio4" value="4">
          <label class="form-check-label" for="inlineRadio4">4</label>
        </div>
        <div class="form-check form-check-inline mb-3">
          <input class="form-check-input" type="radio" name="question<%= i + 1 %>" id="inlineRadio5" value="5">
          <label class="form-check-label" for="inlineRadio5">5</label>
        </div>
        <hr>
      <% } %>
      <br>
      <button class="btn-success" type="submit">Submit</button>
    </form>

</div>

<% include ./partials/footer %>